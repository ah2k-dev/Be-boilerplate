{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"]
    },
    "types": ["node", "express"], // This includes Node.js types
    "typeRoots": ["./node_modules/@types", "./src/types"] // Ensure this path is correct
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"], // Make sure type definitions are included
  "exclude": ["node_modules"]
}
